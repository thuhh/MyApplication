    <RelativeLayout
        android:background="#424C61"
        android:id="@+id/ctToolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp">
        <ImageView
            android:layout_centerVertical="true"
            android:background="@drawable/background_button_back"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_back"
            android:id="@+id/btnKhac"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp" />
        <TextView
            android:fontFamily="@font/raleway_regular"
            android:gravity="center"
            android:layout_toRightOf="@+id/btnKhac"
            android:textSize="@dimen/_16sdp"
            android:textColor="#ffffff"
            android:text="@string/reportManager"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_toLeftOf="@+id/btnSearch"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_menu"
            android:id="@+id/btnList"
            android:layout_centerVertical="true"
            android:background="@drawable/background_button_back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            tools:ignore="RtlHardcoded" />
        <ImageView
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_search"
            android:layout_alignParentRight="true"
            android:id="@+id/btnSearch"
            android:layout_centerVertical="true"
            android:background="@drawable/background_button_back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@+id/ctToolbar"
        android:background="@drawable/bg_cir_blue"
        android:padding="@dimen/_5sdp"
        android:id="@+id/lnSearch"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_search_bg"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
        <EditText
            android:textColor="#ffffff"
            android:textColorHint="#a9a9a9"
            android:id="@+id/edtSearch"
            android:background="#00ffffff"
            android:hint="@string/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnSearch"
        android:id="@+id/rcReport"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>