        <!--android:src="@drawable/bg5" />-->
    <!--<RelativeLayout-->
        <!--android:id="@+id/rlBg"-->
        <!--android:background="@drawable/ct_bg_login"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
