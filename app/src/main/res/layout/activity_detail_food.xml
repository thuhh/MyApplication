    <!--android:id="@+id/rlBg"-->
    <!--android:background="@drawable/ct_bg_login"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->
    <!--</RelativeLayout>-->

    <RelativeLayout
        android:id="@+id/ctToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#424C61">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/background_button_back"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/btnBack"
            android:fontFamily="@font/raleway_regular"
            android:gravity="center"
            android:text="Detail Food"
            android:textColor="#ffffff"
            android:textSize="@dimen/_16sdp" />

    </RelativeLayout>

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/imgFood"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_logo_crab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.45"
        app:siBorderColor="#fff"
        app:siBorderWidth="2dp" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/salsa"
        android:text="Bún Bò Huế"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/_22sdp"
        app:layout_constraintTop_toBottomOf="@id/ctToolbar" />

    <LinearLayout
        android:id="@+id/lnMoney"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/txtName">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMoney"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/raleway_bold"
                android:text="30$"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_regular"
                android:text="Price"
                android:textAlignment="center"
                android:textColor="#a8ffffff"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="#a8ffffff" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSale"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/raleway_bold"
                android:text="5%"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_regular"
                android:text="Sale"
                android:textAlignment="center"
                android:textColor="#a8ffffff"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="#a8ffffff" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:textColor="#fff">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_start" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_start" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_start" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_start" />

                <ImageView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_start" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_regular"
                android:text="Rate"
                android:textAlignment="center"
                android:textColor="#a8ffffff"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:fontFamily="@font/raleway_regular"
        android:textAlignment="center"
        android:id="@+id/txtMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bún"
        android:textColor="#ffffff"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/lnMoney" />

    <TextView
        android:fontFamily="@font/raleway_regular"
        android:textAlignment="center"
        android:id="@+id/txtType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhậu"
        android:textColor="#ffffff"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/txtMaterial" />
</android.support.constraint.ConstraintLayout>