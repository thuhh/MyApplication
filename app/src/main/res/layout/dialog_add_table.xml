<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#becacaca"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:background="#ffffff"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/ctImage"
            android:background="#cc994141"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <ImageView
                android:src="@drawable/ic_add_table_dl2"
                android:id="@+id/imgImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:background="#e5565555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/ctMid"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toBottomOf="@id/ctImage"
            android:layout_width="0dp"
            android:layout_height="0dp">

            <RadioButton

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/radStatus"
                android:text="Trống"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintTop_toBottomOf="@+id/ctMid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp">

            <EditText
                android:paddingStart="@dimen/_10sdp"
                android:textColorHint="#e9e9e9e9"
                android:textColor="#ffffff"
                android:background="#e5565555"
                android:textSize="@dimen/_13sdp"
                android:hint="Tên Bàn"
                android:id="@+id/edtName"
                app:layout_constraintHeight_percent="0.222"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:ignore="RtlCompat" />
            <EditText
                android:inputType="number"
                app:layout_constraintTop_toBottomOf="@+id/edtName"
                android:paddingStart="@dimen/_10sdp"
                android:textColorHint="#e5d2d2d2"
                android:textColor="#ffffff"
                android:background="#e5565555"
                android:textSize="@dimen/_13sdp"
                android:hint="Số người"
                android:id="@+id/edtMember"
                app:layout_constraintHeight_percent="0.222"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/btnSave"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="SAVE"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintHeight_percent="0.22"
                app:layout_constraintTop_toBottomOf="@+id/edtMoney"
                android:layout_width="0dp"
                android:layout_height="0dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>