<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#cc313131"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#fff"
        android:orientation="vertical"
        android:layout_margin="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/ctImage"
            android:background="#cc994141"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp">
            <ImageView
                android:src="@drawable/ic_add_table_dl2"
                android:id="@+id/imgImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.constraint.ConstraintLayout>
        <RadioButton
            android:textColor="#000"
            android:id="@+id/radStatus"
            android:text="Trống"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:paddingStart="@dimen/_10sdp"
            android:textColorHint="#e9e9e9e9"
            android:textColor="#ffffff"
            android:background="#e5565555"
            android:textSize="@dimen/_13sdp"
            android:hint="Tên Bàn"
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            tools:ignore="RtlCompat" />
        <EditText
            android:inputType="number"
            android:paddingStart="@dimen/_10sdp"
            android:textColorHint="#e5d2d2d2"
            android:textColor="#ffffff"
            android:background="#e5565555"
            android:textSize="@dimen/_13sdp"
            android:hint="Số người"
            android:id="@+id/edtMember"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btnSave"
            android:text="SAVE"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
