<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#a3cacaca"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/ic_logo_crab"
            android:id="@+id/imgImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp" />
        <RadioButton
            android:id="@+id/radNew"
            android:text="New"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:paddingStart="@dimen/_10sdp"
            android:textColorHint="#e9e9e9e9"
            android:textColor="#ffffff"
            android:background="#e5565555"
            android:textSize="@dimen/_13sdp"
            android:hint="Tên Món Ăn"
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            tools:ignore="RtlCompat" />
        <EditText
            android:paddingStart="@dimen/_10sdp"
            android:textColorHint="#e5d2d2d2"
            android:textColor="#ffffff"
            android:background="#e5565555"
            android:textSize="@dimen/_13sdp"
            android:hint="Loại"
            android:id="@+id/edtType"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            tools:ignore="RtlCompat" />
        <EditText
            android:paddingStart="@dimen/_10sdp"
            android:textColorHint="#f0e2e2e2"
            android:textColor="#ffffff"
            android:background="#e5565555"
            android:textSize="@dimen/_13sdp"
            android:hint="Giá"
            android:id="@+id/edtMoney"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            tools:ignore="RtlCompat" />
        <EditText
            android:paddingStart="@dimen/_10sdp"
            android:textColorHint="#f0e2e2e2"
            android:textColor="#ffffff"
            android:background="#e5565555"
            android:textSize="@dimen/_13sdp"
            android:hint="Nguyên liệu chính"
            android:id="@+id/edtMaterial"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            tools:ignore="RtlCompat" />
        <EditText
            android:paddingStart="@dimen/_10sdp"
            android:textColorHint="#f0e2e2e2"
            android:textColor="#ffffff"
            android:background="#e5565555"
            android:textSize="@dimen/_13sdp"
            android:hint="Sale %"
            android:id="@+id/edtSale"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            tools:ignore="RtlCompat" />
        <Button
            android:id="@+id/btnSave"
            android:text="SAVE"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>