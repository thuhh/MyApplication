<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/ic_logo_crab"
        android:id="@+id/imgPicture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <android.support.constraint.ConstraintLayout
        android:layout_marginLeft="16dp"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintStart_toEndOf="@id/imgPicture"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:text="GÀ ĐÔNG TẢO"
            android:textSize="@dimen/_14sdp"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:id="@+id/txtName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHeight_percent="0.3"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <TextView
            android:text="Thực phẩm: Tươi sống"
            android:textSize="@dimen/_10sdp"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:id="@+id/txtType"
            app:layout_constraintTop_toBottomOf="@+id/txtName"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHeight_percent="0.2"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <TextView
            android:text="Địa điểm Cung Cấp: Hưng Yên"
            android:textSize="@dimen/_10sdp"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:id="@+id/txtAddress"
            app:layout_constraintTop_toBottomOf="@+id/txtType"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHeight_percent="0.2"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <TextView
            android:text="Ngày mua: 01/01/2019"
            android:textSize="@dimen/_10sdp"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:id="@+id/txtDate"
            app:layout_constraintTop_toBottomOf="@+id/txtAddress"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHeight_percent="0.2"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>