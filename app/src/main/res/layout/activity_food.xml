<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activiti.food.FoodActivity">
    <ImageView
        android:id="@+id/imgBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg5" />
    <RelativeLayout
        android:id="@+id/rlBg"
        android:background="@drawable/ct_bg_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/ctToolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp">
        <ImageView
            android:layout_centerVertical="true"
            android:background="@drawable/background_button_back"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_back"
            android:id="@+id/btnKhac"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp" />
        <TextView
            android:gravity="center"
            android:layout_toRightOf="@+id/btnKhac"
            android:textSize="@dimen/_20sdp"
            android:textColor="#000"
            android:text="Food Manager"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_toLeftOf="@+id/btnSearch"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_add"
            android:id="@+id/btnAdd"
            android:layout_centerVertical="true"
            android:background="@drawable/background_button_back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            tools:ignore="RtlHardcoded" />
        <ImageView
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_search"
            android:layout_alignParentRight="true"
            android:id="@+id/btnSearch"
            android:layout_centerVertical="true"
            android:background="@drawable/background_button_back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_margin="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@+id/ctToolbar"
        android:background="@drawable/ct_button_search"
        android:padding="@dimen/_5sdp"
        android:id="@+id/lnSearch"
        app:layout_constraintHeight_percent="0.08"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_search_bg"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
        <EditText
            android:textColor="#000"
            android:textColorHint="#000000"
            android:id="@+id/edtSearch"
            android:background="#00ffffff"
            android:hint="Search"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvFood"
        android:background="#00ffffff"
        app:layout_constraintTop_toBottomOf="@+id/lnSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>